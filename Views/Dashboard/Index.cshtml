@model StockManagementSystem.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">
                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </h1>
                <p class="text-muted mb-0">Overview of your stock management system</p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-primary" onclick="window.print()">
                    <i class="fas fa-print me-2"></i>Print Report
                </button>
                <button class="btn btn-primary" onclick="location.reload()">
                    <i class="fas fa-sync-alt me-2"></i>Refresh
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-icon">
                        <i class="fas fa-box"></i>
                    </div>
                    <div class="stat-value">@Model.TotalStockItems</div>
                    <div class="stat-label">Total Stock Items</div>
                </div>
                <div class="text-end">
                    <div class="opacity-75">Items</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card" style="background: linear-gradient(135deg, #10b981 0%, #059669 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-icon">
                        <i class="fas fa-dollar-sign"></i>
                    </div>
                    <div class="stat-value">$@Model.TotalValue.ToString("N0")</div>
                    <div class="stat-label">Total Value</div>
                </div>
                <div class="text-end">
                    <div class="opacity-75">Value</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card" style="background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="stat-value">@Model.LowStockItemsCount</div>
                    <div class="stat-label">Low Stock Items</div>
                </div>
                <div class="text-end">
                    <div class="opacity-75">Alert</div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="stat-card" style="background: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <div class="stat-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <div class="stat-value">@Model.TotalUsers</div>
                    <div class="stat-label">Active Users</div>
                </div>
                <div class="text-end">
                    <div class="opacity-75">Users</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Charts and Tables Row -->
<div class="row">
    <!-- Category Summary -->
    <div class="col-xl-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-chart-pie me-2"></i>Category Summary
                </h5>
            </div>
            <div class="card-body">
                @if (Model.CategorySummaries.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Category</th>
                                    <th>Items</th>
                                    <th>Value</th>
                                    <th>Percentage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in Model.CategorySummaries)
                                {
                                    var percentage = Model.TotalValue > 0 ? (category.TotalValue / Model.TotalValue) * 100 : 0;
                                    <tr>
                                        <td>
                                            <i class="fas fa-tag me-2 text-primary"></i>
                                            @category.CategoryName
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">@category.ItemCount</span>
                                        </td>
                                        <td>$@category.TotalValue.ToString("N0")</td>
                                        <td>
                                            <div class="progress" style="height: 8px;">
                                                <div class="progress-bar bg-primary" style="width: @percentage%"></div>
                                            </div>
                                            <small class="text-muted">@percentage.ToString("F1")%</small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-chart-pie fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No category data available</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Recent Activities -->
    <div class="col-xl-6 mb-4">
        <div class="card h-100">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-history me-2"></i>Recent Activities
                </h5>
            </div>
            <div class="card-body">
                @if (Model.RecentActivities.Any())
                {
                    <div class="timeline">
                        @foreach (var activity in Model.RecentActivities.Take(5))
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-primary"></div>
                                <div class="timeline-content">
                                    <div class="d-flex justify-content-between">
                                        <h6 class="mb-1">@activity.Action</h6>
                                        <small class="text-muted">@activity.Timestamp.ToString("MMM dd, HH:mm")</small>
                                    </div>
                                    <p class="mb-1 text-muted">@activity.Description</p>
                                    <small class="text-primary">@activity.User?.FullName</small>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-history fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No recent activities</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Recent Items and Low Stock -->
<div class="row">
    <!-- Recent Stock Items -->
    <div class="col-xl-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-clock me-2"></i>Recent Stock Items
                </h5>
                <a asp-controller="Stock" asp-action="Index" class="btn btn-sm btn-outline-primary">
                    View All
                </a>
            </div>
            <div class="card-body">
                @if (Model.RecentItems.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Item</th>
                                    <th>Category</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Added By</th>
                                    <th>Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.RecentItems)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-box"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@item.Name</div>
                                                    <small class="text-muted">@item.Supplier</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">@item.CategoryName</span>
                                        </td>
                                        <td>
                                            <span class="badge @(item.Quantity < 5 ? "bg-danger" : "bg-success")">
                                                @item.Quantity
                                            </span>
                                        </td>
                                        <td>$@item.Price.ToString("N2")</td>
                                        <td>@item.CreatedByUserName</td>
                                        <td>@item.PurchaseDate.ToString("MMM dd")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-box fa-3x text-muted mb-3"></i>
                        <p class="text-muted">No recent stock items</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <!-- Low Stock Alerts -->
    <div class="col-xl-4 mb-4">
        <div class="card border-warning">
            <div class="card-header bg-warning text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-exclamation-triangle me-2"></i>Low Stock Alerts
                </h5>
            </div>
            <div class="card-body">
                @if (Model.LowStockItems.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var item in Model.LowStockItems.Take(5))
                        {
                            <div class="list-group-item border-0 px-0">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h6 class="mb-1">@item.Name</h6>
                                        <small class="text-muted">@item.CategoryName</small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-danger">@item.Quantity left</span>
                                        <div class="small text-muted">$@item.Price</div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    @if (Model.LowStockItems.Count > 5)
                    {
                        <div class="text-center mt-3">
                            <a href="#" class="btn btn-sm btn-outline-warning">
                                View All @Model.LowStockItems.Count Alerts
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <p class="text-success mb-0">All items are well stocked!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline-item {
    position: relative;
    margin-bottom: 1.5rem;
}

.timeline-marker {
    position: absolute;
    left: -35px;
    top: 0;
    width: 12px;
    height: 12px;
    border-radius: 50%;
}

.timeline-content {
    padding-left: 15px;
    border-left: 2px solid #e2e8f0;
    padding-bottom: 1rem;
}

.avatar-sm {
    width: 32px;
    height: 32px;
    font-size: 0.875rem;
}
</style> 