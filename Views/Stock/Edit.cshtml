@model StockManagementSystem.Models.ViewModels.StockItemViewModel
@{
    ViewData["Title"] = "Edit Stock Item";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">
                    <i class="fas fa-edit me-2 text-warning"></i>Edit Stock Item
                </h1>
                <p class="text-muted mb-0">Update inventory item information</p>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Stock List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-gradient-warning text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-edit me-2"></i>Edit Item Information
                </h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit" method="post" id="editStockForm">
                    <input type="hidden" asp-for="Id" />
                    
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <span asp-validation-summary="ModelOnly"></span>
                    </div>
                    
                    <!-- Basic Information Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-info-circle me-2"></i>Basic Information
                            </h6>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="fas fa-tag me-2 text-primary"></i>Item Name *
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter item name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label fw-semibold">
                                <i class="fas fa-tags me-2 text-primary"></i>Category *
                            </label>
                            <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-select form-select-lg">
                                <option value="">Select a category</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <!-- Inventory Details Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-cubes me-2"></i>Inventory Details
                            </h6>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Quantity" class="form-label fw-semibold">
                                <i class="fas fa-cubes me-2 text-success"></i>Quantity *
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-success text-white">
                                    <i class="fas fa-cubes"></i>
                                </span>
                                <input asp-for="Quantity" type="number" class="form-control" placeholder="Enter quantity" min="0" />
                            </div>
                            <span asp-validation-for="Quantity" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price" class="form-label fw-semibold">
                                <i class="fas fa-dollar-sign me-2 text-success"></i>Price *
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-success text-white">$</span>
                                <input asp-for="Price" type="number" class="form-control" placeholder="0.00" min="0" step="0.01" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <!-- Supplier Information Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-truck me-2"></i>Supplier Information
                            </h6>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Supplier" class="form-label fw-semibold">
                                <i class="fas fa-truck me-2 text-warning"></i>Supplier *
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-warning text-white">
                                    <i class="fas fa-truck"></i>
                                </span>
                                <input asp-for="Supplier" class="form-control" placeholder="Enter supplier name" />
                            </div>
                            <span asp-validation-for="Supplier" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="PurchaseDate" class="form-label fw-semibold">
                                <i class="fas fa-calendar me-2 text-warning"></i>Purchase Date *
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-warning text-white">
                                    <i class="fas fa-calendar"></i>
                                </span>
                                <input asp-for="PurchaseDate" type="date" class="form-control" />
                            </div>
                            <span asp-validation-for="PurchaseDate" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <!-- Additional Information Section -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <h6 class="text-primary mb-3">
                                <i class="fas fa-plus-circle me-2"></i>Additional Information
                            </h6>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="Location" class="form-label fw-semibold">
                                <i class="fas fa-map-marker-alt me-2 text-info"></i>Storage Location
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text bg-info text-white">
                                    <i class="fas fa-map-marker-alt"></i>
                                </span>
                                <input asp-for="Location" class="form-control" placeholder="Enter storage location" />
                            </div>
                            <span asp-validation-for="Location" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-toggle-on me-2 text-info"></i>Item Status
                            </label>
                            <div class="form-check form-switch form-switch-lg">
                                <input asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label fw-semibold">
                                    Active Item
                                </label>
                            </div>
                            <small class="text-muted">Inactive items won't appear in stock reports</small>
                        </div>
                    </div>
                    
                    <!-- Description Section -->
                    <div class="mb-4">
                        <label asp-for="Description" class="form-label fw-semibold">
                            <i class="fas fa-align-left me-2 text-primary"></i>Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter detailed item description (optional)"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>
                    
                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancel
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-lg me-2">
                                <i class="fas fa-eye me-2"></i>View Details
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save me-2"></i>Update Stock Item
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Format price input with proper decimal places
        document.getElementById('Price').addEventListener('input', function() {
            const value = parseFloat(this.value);
            if (!isNaN(value)) {
                this.value = value.toFixed(2);
            }
        });
        
        // Add visual feedback for form submission
        document.getElementById('editStockForm').addEventListener('submit', function() {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Updating...';
            submitBtn.disabled = true;
        });
        
        // Auto-focus on the first input
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('Name').focus();
        });
    </script>
}