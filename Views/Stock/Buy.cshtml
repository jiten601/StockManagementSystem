@model StockManagementSystem.Models.ViewModels.BuyItemViewModel
@{
    ViewData["Title"] = "Buy Item";
}

<div class="row mb-4">
    <div class="col-12 d-flex justify-content-between align-items-center">
        <div>
            <h1 class="h4 mb-0"><i class="fas fa-shopping-cart me-2"></i>Buy @Model.ItemName</h1>
            <p class="text-muted mb-0">Confirm quantity and complete purchase</p>
        </div>
        <a asp-action="Details" asp-route-id="@Model.StockItemId" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Details
        </a>
    </div>
    
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Buy" method="post" class="row g-3">
            <input type="hidden" asp-for="StockItemId" />
            <div class="col-md-4">
                <label class="form-label">Item</label>
                <input class="form-control" value="@Model.ItemName" readonly />
            </div>
            <div class="col-md-3">
                <label class="form-label">Unit Price</label>
                <input class="form-control" value="$@Model.UnitPrice.ToString("N2")" readonly />
            </div>
            <div class="col-md-3">
                <label class="form-label">Available</label>
                <input class="form-control" value="@Model.AvailableQuantity" readonly />
            </div>
            <div class="col-md-2">
                <label asp-for="QuantityToBuy" class="form-label"></label>
                <input asp-for="QuantityToBuy" class="form-control" min="1" max="@Model.AvailableQuantity" />
                <span asp-validation-for="QuantityToBuy" class="text-danger"></span>
            </div>
            <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-credit-card me-2"></i>Buy Now
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



