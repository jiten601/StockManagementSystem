@model StockManagementSystem.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="fas fa-user-cog me-2"></i>
                    <h5 class="mb-0">My Profile</h5>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    
                    <!-- Profile Image Section -->
                    <div class="row mb-4">
                        <div class="col-12 text-center">
                            @if (!string.IsNullOrEmpty(Model.ProfileImage))
                            {
                                <img src="@Model.ProfileImage" alt="Profile Image" class="rounded-circle img-thumbnail" style="width: 150px; height: 150px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                                    <i class="fas fa-user fa-4x text-white"></i>
                                </div>
                            }
                            <h4 class="mt-3">@Model.FullName</h4>
                            <p class="text-muted">@Model.Role</p>
                        </div>
                    </div>
                    
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Full Name</label>
                            <input class="form-control" value="@Model.FullName" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input class="form-control" value="@Model.Email" readonly />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Role</label>
                            <input class="form-control" value="@Model.Role" readonly />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Active</label>
                            <input class="form-control" value="@(Model.IsActive ? "Yes" : "No")" readonly />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Created At</label>
                            <input class="form-control" value="@Model.CreatedAt.ToString("g")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Login</label>
                            <input class="form-control" value="@(Model.LastLoginAt.HasValue ? Model.LastLoginAt.Value.ToString("g") : "-")" readonly />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Profile Image</label>
                            <input class="form-control" value="@(string.IsNullOrEmpty(Model.ProfileImage) ? "No image uploaded" : Model.ProfileImage)" readonly />
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-home me-2"></i>Home
                    </a>
                    <div>
                        <a asp-action="EditProfile" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                        <a asp-controller="Account" asp-action="CheckRoles" class="btn btn-info">
                            <i class="fas fa-user-shield me-2"></i>Roles
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


