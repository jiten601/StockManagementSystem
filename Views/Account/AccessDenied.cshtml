@{
    ViewData["Title"] = "Access Denied";
    var returnUrl = ViewData["ReturnUrl"] as string;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Access Denied
                    </h4>
                </div>
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="fas fa-lock fa-3x text-danger mb-3"></i>
                        <h5 class="text-danger">You don't have permission to access this resource.</h5>
                        <p class="text-muted">
                            Sorry, you don't have the necessary permissions to access the requested page or resource.
                        </p>
                    </div>
                    
                    <div class="d-grid gap-2">
                        @if (!string.IsNullOrEmpty(returnUrl))
                        {
                            <a href="@returnUrl" class="btn btn-primary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Go Back
                            </a>
                        }
                        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                            <i class="fas fa-home me-2"></i>
                            Go to Home
                        </a>
                        <a href="@Url.Action("Login", "Account", new { returnUrl = returnUrl })" class="btn btn-outline-primary">
                            <i class="fas fa-sign-in-alt me-2"></i>
                            Login with Different Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any additional JavaScript if needed
        console.log("Access denied page loaded");
    </script>
} 