@{
    ViewData["Title"] = "Home";
}

<div class="hero-section text-center py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="mb-4">
                    <i class="fas fa-boxes fa-4x text-primary mb-3"></i>
                    <h1 class="display-4 fw-bold text-primary mb-3">Stock Management System</h1>
                    <p class="lead text-muted mb-4">
                        Efficiently manage your inventory with our comprehensive stock management solution. 
                        Track items, monitor stock levels, and streamline your business operations.
                    </p>
                </div>
                
                @if (!User.Identity?.IsAuthenticated == true)
                {
                    <div class="d-flex justify-content-center gap-3 mb-5">
                        <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Get Started
                        </a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </a>
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-center gap-3 mb-5">
                        <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-tachometer-alt me-2"></i>Go to Dashboard
                        </a>
                        <a asp-controller="Stock" asp-action="Index" class="btn btn-outline-primary btn-lg">
                            <i class="fas fa-box me-2"></i>View Stock
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="h3 mb-4">Why Choose Our Stock Management System?</h2>
        </div>
    </div>
    
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-chart-line fa-3x text-primary"></i>
                    </div>
                    <h5 class="card-title">Real-time Tracking</h5>
                    <p class="card-text text-muted">
                        Monitor your inventory levels in real-time with our intuitive dashboard and automated alerts.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-users fa-3x text-success"></i>
                    </div>
                    <h5 class="card-title">Multi-user Access</h5>
                    <p class="card-text text-muted">
                        Collaborate with your team using role-based access control and activity logging.
                    </p>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon mb-3">
                        <i class="fas fa-mobile-alt fa-3x text-info"></i>
                    </div>
                    <h5 class="card-title">Responsive Design</h5>
                    <p class="card-text text-muted">
                        Access your inventory from any device with our mobile-friendly interface.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Statistics Section -->
<div class="bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <i class="fas fa-box fa-2x text-primary mb-2"></i>
                    <h3 class="fw-bold text-primary">500+</h3>
                    <p class="text-muted">Items Tracked</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <i class="fas fa-users fa-2x text-success mb-2"></i>
                    <h3 class="fw-bold text-success">50+</h3>
                    <p class="text-muted">Active Users</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <i class="fas fa-tags fa-2x text-warning mb-2"></i>
                    <h3 class="fw-bold text-warning">25+</h3>
                    <p class="text-muted">Categories</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <i class="fas fa-chart-bar fa-2x text-info mb-2"></i>
                    <h3 class="fw-bold text-info">99.9%</h3>
                    <p class="text-muted">Uptime</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
@if (User.Identity?.IsAuthenticated == true)
{
    <div class="container py-5">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <h2 class="h3 mb-4">Quick Actions</h2>
            </div>
        </div>
        
        <div class="row g-4">
            <div class="col-md-3">
                <a href="@Url.Action("Create", "Stock")" class="card text-decoration-none h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-plus-circle fa-3x text-primary mb-3"></i>
                        <h5 class="card-title text-primary">Add Stock Item</h5>
                        <p class="card-text text-muted">Create a new inventory item</p>
                    </div>
                </a>
            </div>
            
            <div class="col-md-3">
                <a href="@Url.Action("Index", "Stock")" class="card text-decoration-none h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-list fa-3x text-success mb-3"></i>
                        <h5 class="card-title text-success">View Stock</h5>
                        <p class="card-text text-muted">Browse all inventory items</p>
                    </div>
                </a>
            </div>
            
            <div class="col-md-3">
                <a href="@Url.Action("Index", "Dashboard")" class="card text-decoration-none h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-tachometer-alt fa-3x text-warning mb-3"></i>
                        <h5 class="card-title text-warning">Dashboard</h5>
                        <p class="card-text text-muted">View system overview</p>
                    </div>
                </a>
            </div>
            
            <div class="col-md-3">
                <a href="@Url.Action("Index", "Category")" class="card text-decoration-none h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <i class="fas fa-tags fa-3x text-info mb-3"></i>
                        <h5 class="card-title text-info">Categories</h5>
                        <p class="card-text text-muted">Manage item categories</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
}

<!-- Footer -->
<footer class="bg-dark text-light py-4 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h5 class="mb-3">
                    <i class="fas fa-boxes me-2"></i>Stock Management System
                </h5>
                <p class="text-muted mb-0">
                    Efficient inventory management for modern businesses.
                </p>
            </div>
            <div class="col-md-6 text-md-end">
                <p class="text-muted mb-0">
                    &copy; 2024 Stock Management System. All rights reserved.
                </p>
            </div>
        </div>
    </div>
</footer>

<style>
.hero-section {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(255, 255, 255, 0.1);
    z-index: 1;
}

.hero-section .container {
    position: relative;
    z-index: 2;
}

.feature-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(79, 70, 229, 0.1);
    border-radius: 50%;
}

.stat-item {
    padding: 1rem;
}

.card {
    transition: transform 0.3s ease;
}

.card:hover {
    transform: translateY(-5px);
}

.card.text-decoration-none:hover {
    text-decoration: none;
}
</style>
