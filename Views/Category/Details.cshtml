@model StockManagementSystem.Models.Category
@{
    ViewData["Title"] = "Category Details";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h3 mb-0">
                    <i class="fas fa-tag me-2"></i>@Model.Name
                </h1>
                <p class="text-muted mb-0">Category details and associated items</p>
            </div>
            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Edit
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Category Information -->
    <div class="col-md-4 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="fas fa-info-circle me-2"></i>Category Information
                </h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <p class="text-muted">@Model.Name</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-semibold">Description</label>
                    <p class="text-muted">@(Model.Description ?? "No description provided")</p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-semibold">Status</label>
                    <p>
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">
                                <i class="fas fa-check-circle me-1"></i>Active
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                <i class="fas fa-times-circle me-1"></i>Inactive
                            </span>
                        }
                    </p>
                </div>
                
                <div class="mb-3">
                    <label class="form-label fw-semibold">Created</label>
                    <p class="text-muted">@Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                </div>
                
                <div class="mb-0">
                    <label class="form-label fw-semibold">Total Items</label>
                    <p>
                        <span class="badge bg-info fs-6">@Model.StockItems.Count items</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Associated Stock Items -->
    <div class="col-md-8 mb-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">
                    <i class="fas fa-box me-2"></i>Stock Items (@Model.StockItems.Count)
                </h5>
                <a asp-controller="Stock" asp-action="Create" asp-route-categoryId="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="fas fa-plus me-2"></i>Add Item
                </a>
            </div>
            <div class="card-body p-0">
                @if (Model.StockItems.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>Item Name</th>
                                    <th>Quantity</th>
                                    <th>Price</th>
                                    <th>Supplier</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.StockItems.OrderBy(s => s.Name))
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary text-white rounded-circle me-2 d-flex align-items-center justify-content-center">
                                                    <i class="fas fa-box"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold">@item.Name</div>
                                                    @if (!string.IsNullOrEmpty(item.Description))
                                                    {
                                                        <small class="text-muted">@item.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            @{
                                                var quantityClass = item.Quantity == 0 ? "bg-danger" : 
                                                                   item.Quantity < 5 ? "bg-warning" : "bg-success";
                                            }
                                            <span class="badge @quantityClass">@item.Quantity</span>
                                        </td>
                                        <td>$@item.Price.ToString("N2")</td>
                                        <td class="text-muted">@item.Supplier</td>
                                        <td>
                                            <a asp-controller="Stock" asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-box fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">No items in this category</h6>
                        <p class="text-muted small">Add stock items to this category to see them here.</p>
                        <a asp-controller="Stock" asp-action="Create" asp-route-categoryId="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-plus me-2"></i>Add First Item
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>